{
  "manifest_version": 3,
  "name": "크래프톤 정글 9기 로그 아카이브",
  "description": "크래프톤 정글 9기 TIL, WIL 저장합니다.",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "32": "icons/icon-32-rounded.png"
    },
    "default_popup": "popup.html",
    "default_title": "크래프톤 정글 9기 아카이브"
  },
  "permissions": ["scripting", "activeTab", "alarms"]
}
